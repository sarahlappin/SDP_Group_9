extends main

block content
    script.
      function send() {
      alert("Your message was sent successfully. Thank you for contacting us!");
      }
    .container
      .row
        .col-md-6.col-md-offset-3
          h2 Contact Us
          |  Got a question? Feedback? Awesome! 
          p
            | Send your message in the form below and we will get back to you as early as possible.
          form#reused_form(role='form' method='post')
            .form-group
              label(for='name')  Name:
              input#name.form-control(type='text' name='name' required='' maxlength='50')
            .form-group
              label(for='email')  Email:
              input#email.form-control(type='email' name='email' required='' maxlength='50')
            .form-group
              label(for='name')  Message:
              textarea#message.form-control(type='textarea' name='message' placeholder='Your Message Here' maxlength='6000' rows='7')
            button#btnContactUs.btn.btn-lg.btn-success.pull-right(type='submit' onclick='send()') Send!&rarr;
          #success_message(style='width:100%; height:100%; display:none; ')
            h3 Sent your message successfully!
          #error_message(style='width:100%; height:100%; display:none; ')
            h3 Error
            |  Sorry there was an error sending your form.
