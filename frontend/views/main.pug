      { x: new Date(2019, 05, 1), y: 89 },
      { x: new Date(2019, 06, 1), y: 91 },
      { x: new Date(2019, 07, 1), y: 88 },
      //- { x: new Date(2012, 08, 1), y: 9.3 },
      //- { x: new Date(2012, 09, 1), y: 9.2 },
      //- { x: new Date(2012, 10, 1), y: 9.3 },
      //- { x: new Date(2012, 11, 1), y: 9.0 }
      ]
      }
      ]
      });
      chart.render();

      var chart = new CanvasJS.Chart("chartContainer3",
      {
      title:{
        text: "pH",
        fontFamily: "sans-serif",
        fontSize: 20
      },
      axisX: {
        interval: 1,
        title: "Month",
        gridThickness: 0,
        lineThickness: 2,
        tickLength: 7,
        tickThickness: 2
      },
      axisY:{
        interval: 1,
        title: "Average pH",
        gridThickness: 0,
        lineThickness: 2,
        tickLength: 7,
        tickThickness: 2,
        viewportMaximum: 7,
