      {
      title:{
        text: "Soil Moisture",
        fontFamily: "sans-serif",
        fontSize: 20
      },
      axisX: {
        interval: 1,
        title: "Month",
        gridThickness: 0,
        lineThickness: 2,
        tickLength: 7,
        tickThickness: 2
      },
      axisY:{
        interval: 10,
